#: import rgba kivy.utils.rgba
#: import Colors colors.Colors
<Welcome>:
    name: 'welcome'
    GridLayout:
        cols: 1

        Image:
            size_hint: (1,1)
            source: 'metifyLogo.png'
            
            
        GridLayout: 
            cols: 2
            FloatLayout:
                Button:
                    color: rgba(Colors.LIGHT_BLUE)
                    background_color: rgba(Colors.BLUE)
                    text: 'I Am A Patient'
                    font_size: 20
                    pos_hint: {'center_x': 0.5, "top":0.6}
                    size_hint: (.6, .4) # button_width, button_height
                    on_press: root.manager.current = 'patient login'
            FloatLayout:
                Button: 
                    color: rgba(Colors.LIGHT_BLUE)
                    background_color: rgba(Colors.BLUE)
                    text: 'I Am EMS'
                    font_size: 20
                    pos_hint: {'center_x': 0.5, "top":0.6}
                    size_hint: (.6, .4) # button_width, button_height
                    on_press: root.manager.current = 'ems login'