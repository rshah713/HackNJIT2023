#: import rgba kivy.utils.rgba
#: import Colors colors.Colors
<PatientLogin>:
    name: 'patient login'
        
    ############################## LOGIN LABEL ##############################
    GridLayout:
        cols: 1
        
        pos_hint: {"top": 1}
        size_hint_y: 0.3
        padding: 0, 50, 0, 25
        
        Label:
            text: "Login"
            font_size: 100
            font_name: 'Roboto-Bold'
            color: rgba(Colors.BLUE)
                
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'top': 7}
            size_hint_y: .7
                
                
       ############################## EMAIL ##############################
            Label:
                text: "Email:"
                color: rgba(135, 196, 255)
                font_size: 20
                size_hint: (.1, .05)
                pos_hint: {'x': 0.15}
            TextInput:
                id: patient_email
                size_hint: (.7, .1)
                pos_hint: {'x': 0.15}
                multiline: False
                text: ""
                background_color: rgba(135, 196, 255, 0)
                foreground_color: 1,.5,.5

                canvas.after:
                    Color:
                        rgb: 0,1,1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height


            Widget:
                size_hint_y: 0.1